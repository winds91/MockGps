<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:ignore="HardcodedText">

    <data>
        <variable
            name="clickListener"
            type="OnClickListener" />

        <import type="android.view.View.OnClickListener" />
    </data>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/ll_location_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="15dp"
        clickListener="@{clickListener}"
        android:layout_marginTop="1dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/shape_round_5_n_color_white"
        android:elevation="3dp"
        android:orientation="vertical"
        android:paddingHorizontal="10dp"
        android:paddingTop="10dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_location_hint"
                style="@style/hint_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="模拟位置"
                app:layout_constraintHorizontal_bias="0"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@id/iv_location_arrow"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_location_name"
                style="@style/title_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="目标："
                app:layout_constraintHorizontal_bias="0"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@id/iv_location_arrow"
                app:layout_constraintTop_toBottomOf="@id/tv_location_hint" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_location_latlng"
                style="@style/info_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="经纬度："
                app:layout_constraintHorizontal_bias="0"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@id/iv_location_arrow"
                app:layout_constraintTop_toBottomOf="@id/tv_location_name" />


            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_start_location"
                style="@style/hint_style"
                android:layout_width="0dp"
                android:layout_height="30dp"
                clickListener="@{clickListener}"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/shape_round_30_color_master"
                android:paddingVertical="0dp"
                android:text="启动模拟"
                android:textColor="@color/white"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintHorizontal_bias="0"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@id/iv_location_arrow"
                app:layout_constraintTop_toBottomOf="@id/tv_location_latlng" />


            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/iv_location_arrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="5dp"
                android:src="@drawable/ic_select_arrow"
                app:layout_constraintBottom_toBottomOf="@id/tv_location_latlng"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="@id/tv_location_name" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.appcompat.widget.LinearLayoutCompat>
</layout>

