<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
            name="title"
            type="String" />

        <variable
            name="msg"
            type="String" />

        <variable
            name="isSwitch"
            type="Boolean" />

        <import type="android.text.TextUtils" />

        <import type="android.view.View" />
    </data>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="10dp">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">


            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@{title}"
                android:textColor="@color/n_black_80"
                android:textSize="15sp"
                android:visibility="@{TextUtils.isEmpty(title)?View.GONE:View.VISIBLE}" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_msg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@{msg}"
                android:textColor="@color/n_black_50"
                android:textSize="12sp"
                android:visibility="@{TextUtils.isEmpty(msg)?View.GONE:View.VISIBLE}" />


        </androidx.appcompat.widget.LinearLayoutCompat>

        <com.google.android.material.switchmaterial.SwitchMaterial
            android:id="@+id/sw_switch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="@{isSwitch}" />

    </androidx.appcompat.widget.LinearLayoutCompat>
</layout>