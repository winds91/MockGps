<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MyApp" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/master_color_80</item>
        <item name="colorPrimaryVariant">@color/master_color</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/master_color</item>
        <item name="colorSecondaryVariant">@color/master_color_80</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" >?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="editTextStyle">
        <!--选中时下划线的颜色-->
        <item name="colorControlActivated">@color/master_color_80</item>
        <!--默认时下划线的颜色-->
        <item name="colorControlNormal">@color/black_30</item>
    </style>
</resources>